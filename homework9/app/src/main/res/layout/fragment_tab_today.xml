<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".DetailedInfoActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:alignmentMode="alignMargins"
        android:rowCount="3"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        >

<!--    ROW 1    -->
        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginTop="@dimen/detailed_icon_marginTopFirstRow"
            android:layout_marginLeft="@dimen/detailed_icon_marginLeft"
            android:layout_marginRight="@dimen/detailed_icon_marginRight"
            android:layout_marginBottom="@dimen/detailed_icon_marginBottom"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/BGgrey">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:paddingTop="@dimen/detailed_icon_paddingTop"
                android:paddingBottom="@dimen/detailed_icon_paddingBottom"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/detailed_iconSize"
                    android:layout_height="@dimen/detailed_iconSize"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/wind_icon" />

                <TextView
                    android:id="@+id/dailyWindSpeedId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Wind Speed"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/detailed_icon_label_size"
                    android:paddingTop="@dimen/detailed_text_paddingTop"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

